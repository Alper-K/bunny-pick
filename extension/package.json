{
  "name": "bunny-pick",
  "version": "1.2.0",
  "description": "A modern, multilingual Chrome extension for picking colors from anywhere on your screen",
  "main": "popup.html",
  "scripts": {
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "echo \"No linter configured\" && exit 0",
    "build": "echo \"No build process needed\" && exit 0",
    "dev": "echo \"Load extension in Chrome developer mode\" && exit 0",
    "version:patch": "npm version patch && node -e \"const fs=require('fs');const m=require('./manifest.json');m.version=require('./package.json').version;fs.writeFileSync('./manifest.json',JSON.stringify(m,null,2))\"",
    "version:minor": "npm version minor && node -e \"const fs=require('fs');const m=require('./manifest.json');m.version=require('./package.json').version;fs.writeFileSync('./manifest.json',JSON.stringify(m,null,2))\"",
    "version:major": "npm version major && node -e \"const fs=require('fs');const m=require('./manifest.json');m.version=require('./package.json').version;fs.writeFileSync('./manifest.json',JSON.stringify(m,null,2))\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alper-K/bunny-pick.git"
  },
  "keywords": [
    "chrome-extension",
    "color-picker",
    "eyedropper",
    "color-tools",
    "web-extension",
    "multilingual",
    "accessibility",
    "design-tools",
    "compact-mode",
    "color-formats"
  ],
  "author": {
    "name": "ALPER KINALI",
    "url": "https://github.com/Alper-K"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Alper-K/bunny-pick/issues"
  },
  "homepage": "https://github.com/Alper-K/bunny-pick#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "Chrome >= 95",
    "Edge >= 95",
    "Opera >= 81"
  ],
  "devDependencies": {},
  "dependencies": {},
  "files": [
    "icons/",
    "lang/",
    "popup.html",
    "popup.css",
    "popup.js",
    "manifest.json",
    "README.md"
  ],
  "extension": {
    "manifest_version": 3,
    "permissions": [
      "activeTab",
      "clipboardWrite",
      "storage"
    ],
    "supported_browsers": [
      "chrome",
      "edge",
      "opera"
    ],
    "features": [
      "Compact Mode (200x50px)",
      "Full Mode (320x400px)",
      "Multiple Color Formats (HEX, RGB, HSL, HSV, CMYK)",
      "Format Cycling with Arrow Buttons",
      "One-Click Copy with Visual Feedback",
      "Multilingual Support (12 languages)",
      "EyeDropper API Integration",
      "Persistent Settings"
    ]
  }
}
